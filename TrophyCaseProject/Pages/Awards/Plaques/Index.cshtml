    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trophy[0].Division)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trophy[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trophy[0].Sport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trophy[0].Place)
